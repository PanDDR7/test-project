# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /test/assets/*file                       controllers.Assets.versioned(path="/public", file: Asset)
POST    /test/login                              controllers.HomeController.login()

# Test
# GET   /test/test/getProduct                    controllers.TestController.getProduct(id:Integer,account:String,password:String)
POST    /test/test/login                         controllers.TestController.login()

#Product
POST    /test/product/addNewProduct              controllers.ProductController.addNewProduct()
POST    /test/product/updateProductData          controllers.ProductController.updateProductData()
POST    /test/product/deleteProduct              controllers.ProductController.deleteProduct()
POST    /test/product/frontShowAll               controllers.ProductController.frontShowAll()
POST    /test/product/backendShowAll             controllers.ProductController.backendShowAll()
POST    /test/product/frontSearchProduct         controllers.ProductController.frontSearchProduct()
POST    /test/product/backendSearchProduct       controllers.ProductController.backendSearchProduct()

# Cart
POST    /test/cart/insert                        controllers.TestController.insert()
POST    /test/cart/update                        controllers.TestController.update()
POST    /test/cart/delete                        controllers.TestController.delete()
POST    /test/cart/showAll                       controllers.TestController.showAll()

# BackendUser
POST    /test/backend/login                      controllers.BackendUserController.login()
POST    /test/backend/insert                     controllers.BackendUserController.insert()

# FrontUser
POST    /test/front/login                        controllers.FrontUserController.login()
POST    /test/front/insert                       controllers.FrontUserController.insert()

# ShoppingCart
POST    /test/shoppingCart/insert                controllers.ShoppingCartController.insert()
POST    /test/shoppingCart/delete                controllers.ShoppingCartController.delete()
POST    /test/shoppingCart/totalAmount           controllers.ShoppingCartController.totalAmount()
POST    /test/shoppingCart/clear                 controllers.ShoppingCartController.clear()
POST    /test/shoppingCart/showAll               controllers.ShoppingCartController.showAll()

# Orders
POST    /test/orders/produceOrder                controllers.OrdersController.produceOrder()
POST    /test/orders/cancelOrder                 controllers.OrdersController.cancelOrder()
POST    /test/orders/showOrderListForFront       controllers.OrdersController.showOrderListForFront()
POST    /test/orders/showOrderListForBackend     controllers.OrdersController.showOrderListForBackend()

# OrdersDetails
POST    /test/orders/apiTest                       controllers.OrdersDetailsController.apiTest()
POST    /test/orders/searchOrderDetailsForFront    controllers.OrdersDetailsController.searchOrderDetailsForFront()
POST    /test/orders/searchOrderDetailsForBackend  controllers.OrdersDetailsController.searchOrderDetailsForBackend()