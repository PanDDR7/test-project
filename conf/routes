# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
POST    /login                      controllers.HomeController.login()

# Test
# GET     /test/getProduct            controllers.TestController.getProduct(id:Integer,account:String,password:String)
POST    /test/login                 controllers.TestController.login()

#Product
POST    /product/insert             controllers.ProductController.insert()
POST    /product/update             controllers.ProductController.update()
POST    /product/delete             controllers.ProductController.delete()
POST    /product/show               controllers.ProductController.showAll()
POST    /product/search             controllers.ProductController.search()

# Cart
POST    /cart/insert                controllers.TestController.insert()
POST    /cart/update                controllers.TestController.update()
POST    /cart/delete                controllers.TestController.delete()
POST    /cart/showAll               controllers.TestController.showAll()

# BackendUser
POST    /backend/login              controllers.BackendUserController.login()
POST    /backend/insert             controllers.BackendUserController.insert()

# FrontUser
POST    /front/login                controllers.FrontUserController.login()
POST    /front/insert               controllers.FrontUserController.insert()

# ShoppingCart
POST    /shoppingCart/insert        controllers.ShoppingCartController.insert()
POST    /shoppingCart/delete        controllers.ShoppingCartController.delete()
POST    /shoppingCart/totalAmount   controllers.ShoppingCartController.totalAmount()
POST    /shoppingCart/clear         controllers.ShoppingCartController.clear()
POST    /shoppingCart/showAll       controllers.ShoppingCartController.showAll()

